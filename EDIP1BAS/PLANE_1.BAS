	Большая, Средняя, Малая
  };
enum ВРЕМЯ = {
	День, Ночь
  };
enum ПОГОДА = {
	Туман, Хмуро, Ясно
  };
enum АЭРОДРОМ = {
	Стационарный, Полевой
  };
enum ФЮЗЕЛЯЖ = {
	Короткий, Длинный
  };
