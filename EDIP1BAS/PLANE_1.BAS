КРЫЛО      = Стреловидное &
ФЮЗЕЛЯЖ    = Короткий     -> СКОРОСТЬ = Большая;
ДВИГАТЕЛЬ  = Турбина      -> СКОРОСТЬ != Большая;
ДВИГАТЕЛЬ  = Винтовой     &
КРЫЛО      != Стреловидное -> СКОРОСТЬ = Малая;
ДВИГАТЕЛЬ  = Винтовой     -> СКОРОСТЬ != Большая;
/*--------------------------------------------------------------------------*/
ГРУЗ       = Техника      -> КРЫЛО    != Стреловидное;
ГРУЗ       = Десант       -> КРЫЛО    != Обратное;
/*--------------------------------------------------------------------------*/
ФЮЗЕЛЯЖ    = Длинный      &
ДВИГАТЕЛЬ  = Реактивный   -> КРЫЛО    != Обратное;
ФЮЗЕЛЯЖ    = Короткий     &
КРЫЛО      = Стреловидное -> ДВИГАТЕЛЬ != Винтовой;
/*--------------------------------------------------------------------------*/
АЭРОДРОМ   = Полевой      -> ВООРУЖЕНИЕ != Бомбы;
АЭРОДРОМ   = Полевой      -> ГРУЗ       != Техника;
/*--------------------------------------------------------------------------*/
СКОРОСТЬ   = Большая      &
ВРЕМЯ      = Ночь         -> АЭРОДРОМ   = Стационарный;
СКОРОСТЬ   = Большая      &
ПОГОДА     = Туман        -> АЭРОДРОМ   = Стационарный;
СКОРОСТЬ  != Малая        &
ВРЕМЯ      = Ночь         &
ПОГОДА     = Туман        -> АЭРОДРОМ   != Полевой;
/*--------------------------------------------------------------------------*/
ВРЕМЯ      = Ночь         -> ГРУЗ  !=  Фото;
ПОГОДА     = Туман        -> ГРУЗ  !=  Десант;
/*--------------------------------------------------------------------------*/
СКОРОСТЬ   = Большая      -> ГРУЗ       != Техника;
/*--------------------------------------------------------------------------*/
ДВИГАТЕЛЬ  = Винтовой     -> ГРУЗ       != Техника;
/*--------------------------------------------------------------------------*/
ГРУЗ       = Техника      -> ВООРУЖЕНИЕ != Бомбы;
ГРУЗ       = Десант       -> ВООРУЖЕНИЕ  = Пулеметы;
/*--------------------------------------------------------------------------*/
ВООРУЖЕНИЕ = Пушки        -> ДВИГАТЕЛЬ  != Турбина;
ВООРУЖЕНИЕ = Бомбы        -> КРЫЛО      != Стреловидное;
/*--------------------------------------------------------------------------*/
