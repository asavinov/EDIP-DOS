enum СТАДИИ АЛКОГОЛИЗМА = {
	Первая, Вторая, Третья
	};
enum ЗАВИСИМОСТЬ = {
	Психическая, Психо физическая, Физическая
	};
enum УТРАТА САМОКОНТРОЛЯ = {
	Количественного, Ситуационного
	};
enum ВЛЕЧЕНИЕ = {
	Обсессивное, Обсессивно компульсивное, Компульсивное
	};
enum ТОЛЕРАНТНОСТЬ = {
	Повышенная, Максимальная, Пониженная
	};
enum АБСТИНЕНТНЫЙ СИНДРОМ = {
	Отсутствует, Имеет физические признаки, Имеет психо физические признаки
	};
enum ФОРМА ПОТРЕБЛЕНИЯ = {
	Систематическая, Псевдозапойная, Запойная
	};
enum ДЕГРАДАЦИЯ ЛИЧНОСТИ = {
	Отсутствует, Слабо выражена, Выражена явно
	};
enum ПСИХИЧЕСКИЕ ЗАБОЛЕВАНИЯ = {
	Легкие отклонения, Острые алкогольные психозы, Хронические алкогольные психозы
	};

ТОЛЕРАНТНОСТЬ = Повышенная &
ДЕГРАДАЦИЯ ЛИЧНОСТИ = Слабо выражена ->;


ПСИХИЧЕСКИЕ ЗАБОЛЕВАНИЯ   = Хронические алкогольные психозы  ->
			СТАДИИ АЛКОГОЛИЗМА  = Третья                           ;

ЗАВИСИМОСТЬ               = Психическая      &
УТРАТА САМОКОНТРОЛЯ       = Количественного  &
ТОЛЕРАНТНОСТЬ             = Повышенная       ->
			СТАДИИ АЛКОГОЛИЗМА  = Первая           ;

ВЛЕЧЕНИЕ                  = Обсессивно компульсивное   &
АБСТИНЕНТНЫЙ СИНДРОМ      = Имеет физические признаки  ->
			СТАДИИ АЛКОГОЛИЗМА  = Вторая                     ;

ТОЛЕРАНТНОСТЬ             = Пониженная     &
ФОРМА ПОТРЕБЛЕНИЯ         = Запойная       &
ДЕГРАДАЦИЯ ЛИЧНОСТИ       = Выражена явно  ->
			СТАДИИ АЛКОГОЛИЗМА  = Третья         ;

АБСТИНЕНТНЫЙ СИНДРОМ      = Отсутствует  ->
			СТАДИИ АЛКОГОЛИЗМА  = Первая       ;

ЗАВИСИМОСТЬ               = Психо физическая  ->
			СТАДИИ АЛКОГОЛИЗМА  = Вторая            ;

УТРАТА САМОКОНТРОЛЯ       = Количественного           &
ВЛЕЧЕНИЕ                  = Обсессивно компульсивное  &
ТОЛЕРАНТНОСТЬ             = Повышенная                ->
			СТАДИИ АЛКОГОЛИЗМА  = Вторая                    ;

УТРАТА САМОКОНТРОЛЯ       = Количественного  ->
			СТАДИИ АЛКОГОЛИЗМА != Третья;